<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lawyerapp.LawyerApp.controller.ActionCellController"
      alignment="CENTER" spacing="5" style="-fx-padding: 0 5 0 0;">

    <!-- Pulsante Modifica con Icona -->
    <Button fx:id="editButton" styleClass="icon-button"
            onAction="#handleEdit">
        <graphic>
            <ImageView fitWidth="24" fitHeight="24"> <!-- MODIFICATO: Dimensione aumentata -->
                <Image url="@../img/modify.png" />
            </ImageView>
        </graphic>
    </Button>

    <!-- Pulsante Elimina con Icona -->
    <Button fx:id="deleteButton" styleClass="icon-button"
            onAction="#handleDelete">
        <graphic>
            <ImageView fitWidth="24" fitHeight="24"> <!-- MODIFICATO: Dimensione aumentata -->
                <Image url="@../img/delete.png" />
            </ImageView>
        </graphic>
    </Button>
</HBox>
